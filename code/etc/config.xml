<config>
	<modules>
		<Meanbee_Postcode>
			<version>2.1.0</version>
		</Meanbee_Postcode>
	</modules>
	
	<global>
		<models>
			<postcode>
				<class>Meanbee_Postcode_Model</class>
			</postcode>
		</models>
		<blocks>
			<postcode>
				<class>Meanbee_Postcode_Block</class>
			</postcode>

            <checkout>
                <rewrite>
                    <onepage_shipping>Meanbee_Postcode_Block_Checkout_Onepage_Shipping</onepage_shipping>
                    <onepage_billing>Meanbee_Postcode_Block_Checkout_Onepage_Billing</onepage_billing>
                </rewrite>
            </checkout>
            <customer>
                <rewrite>
                    <address_edit>Meanbee_Postcode_Block_Customer_Address_Edit</address_edit>
                </rewrite>
            </customer>
		</blocks>
		
		<helpers>
			<postcode>
				<class>Meanbee_Postcode_Helper</class>
			</postcode>
		</helpers>
	</global>
	
	<frontend>
		<routers>
			<postcode>
				<use>standard</use>
				<args>
                    <module>Meanbee_Postcode</module>
                    <frontName>postcode</frontName>
				</args>
			</postcode>
		</routers>
		<layout>
			<updates>
				<postcode>
                    <file>meanbee/postcode/postcode.xml</file>
				</postcode>
			</updates>
		</layout>
	</frontend>
    
    <admin>    
        <routers>
            <postcode>
                <use>admin</use>
                <args>
                    <module>Meanbee_Postcode</module>
                    <frontName>postcode</frontName>
                </args>
            </postcode>
        </routers>
    </admin>	
	
    <adminhtml>
        <layout>
            <updates>
                <postcode>
                    <file>meanbee/postcode/postcode.xml</file>
                </postcode>
            </updates>
        </layout>

		<acl>
			<all>
				<title>Allow Everything</title>
			</all>
			<resources>
				<admin>
					<children>
						<system>
							<children>
								<config>
									<children>
										<postcode translate="title" module="postcode">
											<title>Address Finder Section</title>
										</postcode>
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>
	</adminhtml>
</config>
